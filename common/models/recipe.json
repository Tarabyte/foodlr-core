{
  "name": "recipe",
  "base": "PersistedModel",
  "idInjection": true,
  "indexes": {
    "fulltext": {
      "keys": {
        "caption": "text",
        "content": "text"
      },
      "options": {
        "default_language": "russian",
        "weights": {
          "caption": 10,
          "content": 1
        }
      }
    }
  },
  "properties": {
    "caption": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "string",
      "required": true
    },
    "calories": {
      "type": "number",
      "required": true
    },
    "fats": {
      "type": "number"
    },
    "carbs": {
      "type": "number"
    },
    "proteins": {
      "type": "number"
    },
    "active": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "isCalculationMagic": {
      "type": "boolean",
      "default": true
    },
    "ingredients": {
      "type": [
        "object"
      ],
      "required": true
    },
    "portions": {
      "type": "number",
      "default": 1
    },
    "rubrics": {
      "type": [
        "object"
      ]
    },
    "category": {
      "type": "object"
    },
    "tags": {
      "type": [
        "object"
      ]
    },
    "publications": {
      "type": "number",
      "default": 1
    },
    "cookingTime": {
      "type": "number"
    },
    "cuisine": {
      "type": "object"
    },
    "recipeOfTheDay": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {},
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "readonly",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "find"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "lucky"
    }
  ],
  "methods": {}
}
